<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <layer-list>
            <item android:left="1dp" android:top="1dp">
                <shape>
                    <solid android:color="#80202020" />
                    <corners android:radius="0dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="1dp">
                <shape android:shape="rectangle"  >
                    <corners android:radius="0dip" />
                    <solid android:color="#E3E3E3"/>
                </shape>
            </item>
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item android:left="1dp" android:top="1dp">
                <shape>
                    <solid android:color="#804E4E4E" />
                    <corners android:radius="0dp" />
                </shape>
            </item>
            <item android:bottom="2dp" android:right="1dp">
                <shape android:shape="rectangle"  >
                    <corners android:radius="0dip" />
                    <gradient android:angle="180" android:startColor="#F1F1F1" android:endColor="#BFD9F4" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>